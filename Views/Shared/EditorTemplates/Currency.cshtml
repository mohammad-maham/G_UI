@model int?
@{
    LayoutRenderType = UFO.Core.UI.WebApplication.LayoutRenderTypes.EditorFullWrapper;
    var disabled = ViewBag.Disabled != null && ViewBag.Disabled ? "disabled=\"disabled\"" : "";
}

@section Label{
    @Html.LabelFor(m => m)
}

@section Input{
    <div class="input-group">
        @Html.Raw(string.Format("<input type=\"{0}\" id=\"@{{id}}\" name=\"@{{name}}\" value=\"{1}\" class=\"form-control currency\" @{{disabled}} />"
        , "text"
        , ViewBag.Value ?? Html.ValueFor(m => m)))
        <span class="input-group-addon"> <i class="fa fa-money"></i> </span>
    </div>



}



