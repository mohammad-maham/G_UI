@using UFO.Infrastructure.Helpers.Data.Date
    @model string
    @{
        LayoutRenderType = UFO.Core.UI.WebApplication.LayoutRenderTypes.EditorFullWrapper;
        var value = Html.ValueFor(m => m).ToString().Trim();
        if (string.IsNullOrEmpty(value))
        {
            value = DateTimeHelper.GetPersian(DateTime.Now);
        }
    }
    @section Label{
        @Html.LabelFor(m => m)
    }

    @section Input{
        <div class='input-group'>
            @Html.Raw(string.Format("<input type=\"{0}\" id=\"@{{id}}\" name=\"@{{name}}\" value=\"{1}\" class=\"date dasdasdasdas form-control\" />"
        , "datetime"
        , value))
            <span class='input-group-addon'> <i class='fa fa-calendar'></i> </span>
        </div>
    }
