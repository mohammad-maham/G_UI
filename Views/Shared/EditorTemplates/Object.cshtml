@model object
@{
    LayoutRenderType = UFO.Core.UI.WebApplication.LayoutRenderTypes.EditorFullWrapper;
}
@section Label{
    @Html.LabelFor(m => m)
}

@section Input{
    @Html.Raw(string.Format("<input type=\"{0}\" id=\"@{{id}}\" name=\"@{{name}}\" value=\"{1}\" class=\"form-control\" />"
        , "number"
        , Html.ValueFor(m => m)))
}
