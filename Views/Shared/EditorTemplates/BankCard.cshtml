@model string
@{
    LayoutRenderType = UFO.Core.UI.WebApplication.LayoutRenderTypes.EditorFullWrapper;
}
@section Label{
    @Html.LabelFor(m => m)
}

@section Input{
    <div class='input-group'>
        @Html.Raw(string.Format("<input type=\"{0}\" id=\"@{{id}}\" name=\"@{{name}}\" value=\"{1}\" class=\"input-mask-bank form-control \" style='width:175px' />"
        , "text"
        , Html.ValueFor(m => m)))
        <span class='input-group-addon'> <i class='fa  fa-credit-card '></i> </span>
    </div>
}
