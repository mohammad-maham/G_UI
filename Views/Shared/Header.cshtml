                        <span>پیام ها</span>
                    </a>
                </div>
                <div class="dropdown-item logout">
                    <a href="@Url.Action("Logout","Account")">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                        <span>خروج</span>
                    </a>
                </div>
            </div>
        </li>
    </ul>
</header>


<script>
    var dowhile;
    $(function () {
        var interval = 5000;
        var inpPrice = $(".price-preview >  span");
        function getOnlinePrice() {
            $.ajax({
                type: 'POST',
                url: '/Store/GetOnlinePrice',
                data: {
                    weight: 1.0,
                    calcType: 1,
                },
                success: function (data) {
                    if ($.isNumeric(data)) {
                        var preVal = inpPrice.html();
                        var formattedData = Number(data).toLocaleString('en');
                        inpPrice.html(formattedData);
                        if (preVal <= formattedData) {
                            inpPrice.parent().css("background-color", "#e7515a");
                        } else if (preVal > formattedData) {
                            inpPrice.parent().css("background-color", "#e7515a1f");
                        }
                        if (dowhile) {
                            dowhile = setTimeout(getOnlinePrice, interval);
                        }
                    } else {
                        window.location = "/Account/Login";
                    }
                },
                error: function (data) {
                    window.clearTimeout(dowhile);
                }
            });
        }
        dowhile = setTimeout(getOnlinePrice, interval);
    });
</script>