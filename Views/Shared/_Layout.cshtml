<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>Gold </title>

    @*----------------- CSS ------------------------------------*@
    <link href="~/Content/assets/img/favicon.ico" rel="icon" type="image/x-icon" />
    <link href="~/Content/assets/css/loader.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/plugins/sweetalerts/sweetalert2.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/elements/avatar.css" rel="stylesheet" type="text/css">
    <link href="~/Content/assets/css/select2.min.css" rel="stylesheet">
    <link href="~/Content/assets/css/select2-bootstrap.css" rel="stylesheet">
    <link href="~/Content/assets/css/dashboard/dash_2.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/css/_custom.css" rel="stylesheet">
    <link href="~/Content/plugins/apex/apexcharts.css" rel="stylesheet" type="text/css">
    <link href="~/Content/plugins/bootstrap-touchspin/jquery.bootstrap-touchspin.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/components/cards/card.css" rel="stylesheet" />
    <link href="~/Content/assets/css/elements/infobox.css" rel="stylesheet" />
    <link href="~/Content/assets/css/forms/switches.css" rel="stylesheet" />
    <link href="~/Content/assets/css/forms/theme-checkbox-radio.css" rel="stylesheet" />
    <link href="~/Content/plugins/touch-slider/css/mobiscroll.jquery.min.css" rel="stylesheet" />
    @*<link href="~/Conten/assets/css/plugins.css" rel="stylesheet" type="text/css" />*@

    @*----------------- JS ------------------------------------*@
    <script src="~/Content/assets/js/loader.js"></script>
    <script src="~/Content/assets/js/libs/jquery-3.1.1.min.js"></script>
    <script src="~/Content/assets/js/libs/jquery-ui.js"></script>
    <script src="~/Content/bootstrap/js/popper.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/plugins/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/Content/assets/js/app.js"></script>
    <script src="~/Content/plugins/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js"></script>
    <script src="~/Content/plugins/touch-slider/js/mobiscroll.jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            App.init();
        });
    </script>

    <script src="~/Content/plugins/apex/apexcharts.min.js"></script>
    <script src="~/Content/plugins/sweetalerts/sweetalert2.min.js"></script>
    <script src="~/Content/plugins/blockui/jquery.blockUI.min.js"></script>
    <script src="~/Content/assets/js/select2.min.js"></script>
    <script src="~/Content/assets/js/Helper.js"></script>
    <script src="~/Content/assets/js/custom.js"></script>
</head>
<body class="alt-menu sidebar-noneoverflow">

    <div id="load_screen" class="">
        <div class="loader">
            <div class="loader-content">
                <div class="spinner-grow align-self-center"></div>
            </div>
        </div>
    </div>

    <div class="header-container fixed-top">
        @Html.Action("Header", "Home")
    </div>

    <div class="main-container sidebar-closed sbar-open" id="container">

        <div class="overDlay"></div>
        <div class="cs-overlay"></div>
        <div class="search-overlay"></div>

        <div class="sidebar-wrapper sidebar-theme">
            @Html.Action("Sidebar", "Home")
        </div>


        <div id="content" class="main-content">
            <div class="row layout-top-spacing">
                <div id="custom_styles" class="col-lg-12 col-md-12">
                    @if (!new string[] { "/", "/Home" }.Contains(Context.Request.Url.PathAndQuery))
                    {
                        <div class="row statbox widget box box-shadow form-header"></div>
                    }
                    <div class="layout-px-spacing">
                        @RenderBody()
                    </div>
                </div>

            </div>
        </div>
    </div>
    @*<footer>
            <p>کلیه حقوق محفوظ است.</p>
        </footer>*@
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    $('.touch-time').mobiscroll().datepicker({
        //theme: 'ios',
        themeVariant: 'light',
        controls: ['time'],
        timeFormat: 'HH:mm:ss',
        headerText: 'Time: {value}',
        touchUi: true
    });
</script>