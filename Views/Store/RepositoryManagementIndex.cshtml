<style>
    .gold-card-img {
        width: 15em;
    }

    .gold-card {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        align-content: center;
        justify-content: center;
        align-items: center;
        padding-top: 15px;
    }
</style>

<div class="row gold-row">
    @using (Html.Box(col: 4))
    {
        <div class="widget-chart-one">
            <div class="widget-heading">
                <h5>وضعیت گاوصندوق</h5>
            </div>
            <div class="widget-content">
                <div class="tabs tab-content">
                    <div id="content_1" class="tabcontent">
                        <div class="repository-status-chart"></div>
                    </div>
                </div>
            </div>
        </div>
    }
    @using (Html.Box(col: 8))
    {
        <div class="widget-chart-one">
            <div class="widget-heading">
                <h5>نمای کلی گاوصندوق</h5>
            </div>
            <div class="widget-content">
                <div class="tabs tab-content">
                    <div id="content_1" class="tabcontent">
                        <div class="row">
                            @foreach (GoldRepositoryVM goldRepository in Model.GoldRepositoryStatus.GoldRepositoryVM.OrderBy(x => x.GoldMaintenanceType).ToList())
                            {
                                string date = goldRepository.LastUpdatePersianDate.Split(' ')[0];
                                string time = goldRepository.LastUpdatePersianDate.Split(' ')[1];
                                <div class="col-md-6">
                                    <div class="card component-card_9 gold-card">
                                        <img src="~/Content/assets/img/gold-treasure.png" class="card-img-top gold-card-img" />
                                        <div class="card-body">
                                            <p class="meta-date">آخرین بروزرسانی صندوق: <b>@(time +"-"+date)</b></p>
                                            <h5 class="card-title">صندوق <b>@goldRepository.MaintenanceType</b></h5>
                                            <p class="card-text">
                                                <ul>
                                                    <li>وزن: <b>@goldRepository.Weight</b> گرم</li>
                                                    <li>عیار: <b>@goldRepository.Carat</b></li>
                                                    <li>آخرین کاربر ویرایش/ثبت کننده: <b>@goldRepository.LastUpdateUser</b></li>
                                                    <li>نوع طلا: <b>@(goldRepository.GoldType==1?"طلای آب شده":"طلای آب شده با قابلیت حواله شدن")</b></li>
                                                </ul>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="row gold-row">
    @using (Html.Box(col: 12))
    {
        <div class="widget-chart-one">
            <div class="widget-heading">
                <h5>بروزرسانی گاوصندوق</h5>
            </div>
            <div class="widget-content">
                <div class="tabs tab-content">
                    <div id="content_1" class="tabcontent">
                        <form form class="frmRepositoryCharge" id="frmRepositoryCharge" action="javascript:void(0);" novalidate>
                            @Html.HiddenFor(x => x.SubmitType)
                            <div class="row">
                                <div class="col-md-3 mt-3">
                                    <label for="GoldTypes">نوع طلا</label>
                                    @Html.DropDownListFor(x => x.GoldType, (IEnumerable<SelectListItem>)ViewBag.Types, new { @class = "form-control select2" })
                                </div>
                                <div class="col-md-3 mt-3">
                                    <label for="GoldCarats">عیار</label>
                                    @Html.DropDownListFor(x => x.Carat, (IEnumerable<SelectListItem>)ViewBag.Carats, new { @class = "form-control select2" })
                                </div>
                                @Html.EditorFor(x => x.Weight)
                            </div>
                            <div class="transaction-result"></div>
                            <div class="col-auto field-wrapper command-panel">
                                @Html.Partial("_GoldButton", new GoldButton()
                           {
                               ButtonType = GoldButtonTypes.button,
                               Name = "btnIncrease",
                               Icon = "fa fa-plus fa-1x",
                               Class = "btn btn-success",
                               Text = "افزایش طلا",
                               OnClick = "confirm(1)"
                           })
                                @Html.Partial("_GoldButton", new GoldButton()
                           {
                               ButtonType = GoldButtonTypes.button,
                               Name = "btnDecrease",
                               Icon = "fa fa-minus fa-1x",
                               Class = "btn btn-danger",
                               Text = "کاهش طلا",
                               OnClick = "confirm(2)"
                           })
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    $("input[name='@nameof(Model.Weight)']").TouchSpin({
        prefix: 'گرم',
        buttondown_class: "btn btn-classic btn-danger",
        buttonup_class: "btn btn-classic btn-success"
    });
    function confirm(submitType) {
        $("input[name='@(nameof(Model.SubmitType))'][type=hidden]").val(submitType);
        swal({
            title: submitType == 1 ? 'تائیدیه افزایش گاوصندوق' : 'تائیدیه کاهش گاوصندوق',
            text: "آیا از عملیات خود اطمینان دارید؟",
            type: 'question',
            showCancelButton: true,
            cancelButtonText: 'انصراف',
            confirmButtonText: 'تائید',
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                $('#frmRepositoryCharge').submit();
            }
        });
    }
    function disableInputs() {
        $("#btnIncrease, #btnDecrease").attr("disabled", "disabled");
        $("input[name='@nameof(Model.Weight)']").val('');
    }
    $("input[name='@nameof(Model.Weight)']").bind('change', function (e) {
        var value = $(this).val();
        if (value > 0 && value <= 1000) {
            $("#btnIncrease, #btnDecrease").removeAttr("disabled", "disabled");
        } else {
            disableInputs();
            toast({
                type: 'warning',
                title: "مقدار وزن حداقل 1 و حداکثر 1000 گرم می باشد",
            });
        }
    });
    $('#frmRepositoryCharge').ajaxForm({
        validation: true,
        url: '/Store/SubmitRepositoryCharge',
        jwt: true,
        blockui: true,
        mixin: true,
        target: ".transaction-result",
        success: function (data) {
            if (data) {
                swal({
                    title: 'عملیات موفق',
                    text: "عملیات با موفقیت انجام یافت",
                    type: 'success',
                    padding: '2em'
                });
                setTimeout(() => {
                    location.reload();
                }, 1500);
            }
            disableInputs();
        }
    });
    const series = [@ownerPieValue, @bondedPieValue];
    const labels = ['طلای گاوصندوق مالکیتی', 'طلای گاوصندوق وکالتی'];

    var options = {
        chart: {
            width: 380,
            type: 'pie',
        },
        series: series,
        labels: labels,
        plotOptions: {
            pie: {
                expandOnClick: true,
                donut: {
                    size: '85%',
                    labels: {
                        show: true,
                        name: {
                            show: true,
                            fontSize: '12px',
                            fontWeight: '400',
                            color: '#6E7191',
                        },
                        value: {
                            show: true,
                            fontSize: '22px',
                            fontWeight: '600',
                            color: '#2E285C',
                        },
                        //total: {
                        //    show: true,
                        //    color: '#BCC1C8',
                        //    fontWeight: '600',
                        //    fontSize: '35px',
                        //}
                    }
                }
            }
        },
        dataLabels: {
            enabled: true,
        },
        responsive: [{
            breakpoint: 480,
            options: {
                chart: {
                    width: 200
                },
                legend: {
                    position: 'bottom',
                    fontSize: "17px",
                    fontFamily: "YekanBakhRegular",
                    fontWeight: "bold"
                }
            }
        }],
        legend: {
            position: 'bottom',
            fontSize: "17px",
            fontFamily: "YekanBakhRegular",
            fontWeight: "bold",
            offsetY: 0,
        },
        colors: ['#645CAA', '#BFACE0'],
        //title: {
        //    text: 'موجودی انبار',
        //    align: 'top',
        //    floating: true,
        //    style: {
        //        fontSize: '36px',
        //        fontWeight: '500',
        //        color: '#2E285C'
        //    },
        //}
    };

    var chart = new ApexCharts(document.querySelector(".repository-status-chart"), options);
    chart.render();
</script>