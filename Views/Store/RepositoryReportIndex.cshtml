    Title = "گزارش گاوصندوق",
    Description = "گزارش جامع گاوصندوق طلا"
})

<div class="row gold-row">
    @using (Html.Box(col: 12, title: "جستجو"))
    {
        <form form class="frmRepositoryReport" id="frmRepositoryReport" action="javascript:void(0);" novalidate>
            <div class="row">
                <div class="col-md-3 mt-3">
                    <label for="GoldType">نوع طلا</label>
                    @Html.DropDownListFor(x => x.GoldType, (IEnumerable<SelectListItem>)ViewBag.Types, new { @class = "select2" })
                </div>
                <div class="col-md-3 mt-3">
                    <label for="GoldType">عیار</label>
                    @Html.DropDownListFor(x => x.Carat, (IEnumerable<SelectListItem>)ViewBag.Carats, new { @class = "select2", required = true })
                </div>
                <div class="col-md-3 mt-3">
                    <label for="GoldType">کاربر</label>
                    @Html.DropDownListFor(x => x.UserId, (IEnumerable<SelectListItem>)ViewBag.Users, new { @class = "select2" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.EditorFor(x => x.FromDate, new { HtmlAttributes = new { @class = "date", type = "gold-date", required = true } })
                </div>
                <div class="col-md-3">
                    @Html.EditorFor(x => x.ToDate, new { HtmlAttributes = new { @class = "date", type = "gold-date", required = true } })
                </div>
            </div>
            <div class="col-auto field-wrapper command-panel">
                @Html.Partial("_GoldButton", new GoldButton()
           {
               ButtonType = GoldButtonTypes.submit,
               Name = "btnSearch",
               Icon = "fa fa-search fa-1x",
               Class = "btn btn-primary",
               Text = "جستجو"
           })
            </div>
        </form>
    }
</div>

<div class="report-result"></div>

<script>
    $('#frmRepositoryReport').ajaxForm({
        validation: true,
        url: '/Store/RepositoryReportIndexData',
        jwt: true,
        blockui: true,
        mixin: true,
        target: ".report-result",
        success: function (data) { }
    });
</script>

@Html.Partial("_LayoutReport")