@using G_APIs.Models
@model OnlinePriceVM
@{
    Layout = null;
    int calcType = Model.CalcTypes == CalcTypes.buy ? 1 : 2;
}

@Html.Editor("CurrentOnlinePrice", new { HtmlAttributes = new { DisplayName = "قیمت واحد", @Value = Model.Price.ToString("N0"), InputGroup = "ریال" } })

<script>
    var dowhile;
    $(function () {
        var interval = 3000;
        var inpPrice = $("input[name='CurrentOnlinePrice']");
        function getOnlinePrice() {
            $.ajax({
                type: 'POST',
                url: '/Store/GetOnlinePrice',
                data: {
                    weight: 1.0,
                    calcType: @calcType
                },
                success: function (data) {
                    if ($.isNumeric(data)) {
                        var preVal = inpPrice.val();
                        var formattedData = Number(data).toLocaleString('en');
                        inpPrice.val(formattedData);
                        if (preVal <= formattedData) {
                            inpPrice.css("background-color", "#25b61738");
                        } else if (preVal > formattedData) {
                            inpPrice.css("background-color", "#b6171738");
                        }
                        setTimeout(function () {
                            inpPrice.css("background-color", "");
                        }, 1000);
                        if (dowhile) {
                            dowhile = setTimeout(getOnlinePrice, interval);
                        }
                    } else {
                        window.location = "/Account/Login";
                    }
                },
                error: function (data) {
                    window.clearTimeout(dowhile);
                }
            });
        }
        dowhile = setTimeout(getOnlinePrice, interval);
    });
</script>