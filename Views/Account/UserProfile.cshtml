<style>
    #imagePreviewContainer div {
        width: 80px;
        float: left;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 4px;
        margin: 10px;
        position: relative;
    }

        #imagePreviewContainer div img {
            max-width: 100%;
        }

        #imagePreviewContainer div span {
            position: absolute;
            color: #ff0000;
            z-index: 999;
            top: 5px;
            right: 5px;
            cursor: pointer;
            font-weight: bolder;
            background: #fff;
            border-radius: 5px;
            line-height: 10px;
            font-size: 12px;
            padding: 2px 2px 0 2px;
        }
</style>

<div class="row gold-row">
    @using (Html.Box(col: 12, title: "پروفایل من", iconType: BoxIconTypes.form))
    {
        <form class="profileForm" id="profileForm" action="javascript:void(0);" novalidate>
            <div class="row">
                <div class="col-md-4">
                    @Html.EditorFor(x => x.FirstName, new { HtmlAttributes = new { required = true } })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(x => x.LastName, new { HtmlAttributes = new { required = true } })
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(x => x.FatherName, new { HtmlAttributes = new { required = true } })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    @Html.EditorFor(x => x.BirthDay, new { HtmlAttributes = new { @class = "date", type = "gold-date", required = true } })
                </div>
                <div class="col-md-4 mt-3">
                    <label for="validationCustom01"> جنسیت  </label>
                    <select name="Gender" class="custom-select select2" required="">
                        <option value="1">مرد</option>
                        <option value="0">زن</option>
                    </select>

                    @*@Html.DropDownListFor(x => x.Gender, (IEnumerable<SelectListItem>)ViewBag.Genders, new { @class = "select2" })*@
                    <div class="invalid-feedback">
                        وارد کردن این فیلد الزامیست
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mt-3">
                        <div class="form-group">
                            <label for=" "> عکس پشت و رو کارت ملی  </label>
                            <input class="form-control" name="Images" multiple type="file" id="fileUpload" required />
                            <div class="invalid-feedback">
                                وارد کردن این فیلد الزامیست
                            </div>
                        </div>
                    </div>
                    <div id="imagePreviewContainer" class="mt-3">
                        @{
                            if (Model != null && !string.IsNullOrEmpty(Model.NationalCardImage) && Model.NationalCardImage != "[]")
                            {
                                var images = Newtonsoft.Json.JsonConvert.DeserializeObject<List<string>>(Model.NationalCardImage);
                                <div>
                                    <span onclick="RemoveImage(this)">x</span>
                                    <img src="data:image/png;base64,@images[0]" class="preview-image" />
                                    <input type="text" name="FrontNationalImage" value="@images[0]" />

                                </div>
                                <div>
                                    <span onclick="RemoveImage(this)">x</span>
                                    <img src="data:image/png;base64,@images[1]" class="preview-image" />
                                    <input type="text" name="BackNationalImage" value="@images[1]" />
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-auto mt-3 field-wrapper command-panel">
                @Html.Partial("_GoldButton", new GoldButton()
                {
                    ButtonType = GoldButtonTypes.submit,
                    Name = "btnDeposit",
                    Icon = "fa fa-save fa-2x",
                    Class = "btn btn-success",
                    Text = "ذخیره",
                    //OnClick = "Deposit()"
                })
                @Html.Partial("_GoldButton", new GoldButton()
                {
                    ButtonType = GoldButtonTypes.cancel,
                    Name = "btnCancel",
                    Text = "برگشت",

                })
            </div>
        </form>
    }
</div>

