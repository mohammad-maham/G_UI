@model  G_APIs.Models.BankAccount

<link href="~/Content/assets/css/elements/avatar.css" rel="stylesheet" type="text/css">
<script src="~/Content/assets/js/jquery.mask.js"></script>

<div class="row layout-top-spacing">
    <div id="custom_styles" class="col-lg-12 layout-spacing col-md-12">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        @*<h4>  تکمیل اطلاعات بانکی</h4>*@
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="widget-content widget-content-area">
                    <p class="h6 font-weight-bold">لطفا بانک مورد نظر را انتخاب کنید.</p>
                    <div class="avatar avatar-xl mt-1 mr-2">
                        <img alt="avatar" src="~/Content/assets/img/bank/melat.png" class="rounded" data-value="1" title="ملی">
                    </div>
                    <div class="avatar avatar-xl mt-1 mr-2">
                        <img alt="avatar" src="~/Content/assets/img//bank/saderat.png" class="rounded" data-value="2" title="ملت">
                    </div>
                    <div class="avatar avatar-xl mt-1 mr-2">
                        <img alt="avatar" src="~/Content/assets/img//bank/melli.png" class="rounded" data-value="3" title="صادرات">
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-md-5">
                    <form form class="bankForm" id="bankForm" action="javascript:void(0);" novalidate>

                        <input id="bankname" name="BankName" type="hidden" />

                        <div class="">
                            <label for="validationCustom01">شماره کرات</label>
                            <input id="cardNumber" name="CardNumber" type="text" class="form-control text-right" value="@Model.CardNumber" required
                                   placeholder="____-____-____-____">
                            <div class="invalid-feedback">
                                وارد کردن این فیلد الزامیست
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="validationCustom01">شماره حساب</label>
                            <input name="AccountNumber" type="number" class="form-control text-right" value="@Model.Hesab" required>
                            <div class="invalid-feedback">
                                وارد کردن این فیلد الزامیست
                            </div>
                        </div>

                        <div class=" mt-3">
                            <label for="validationCustom01">شبا  </label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">IR</div>
                                </div>
                                <input name="Shaba" type="number" class="form-control text-right" value="@Model.Shaba" required>
                                <div class="invalid-feedback">
                                    وارد کردن این فیلد الزامیست
                                </div>
                            </div>
                        </div>

                        <div class="field-wrapper  mt-4">
                            <button class="btn btn-primary submit-fn col-md-5 float-right" type="submit">  ذخیره      </button>
                        </div>

                    </form>
                </div>

                <div class="col-md-7">
                    <div class="row" id="cancel-row">
                       
                        <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                            <div class="widget-content widget-content-area br-6">
                                <div class="widget-header">
                                    <div class="row">
                                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                            <h4>       کارت های ذخیره شده</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive mb-4 mt-4">
                                    <table id="report1" class="table table-hover non-hover" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>بانک</th>
                                                <th>شماره کارت</th>
                                                <th>شماه حساب</th>
                                                <th>  شبا</th>
                                                <th>عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>ملت </td>
                                                <td> 6104-1234-4543-3434</td>
                                                <td>2342324 </td>
                                                <td> Ir-234324234234242423</td>
                                                <td> </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>


            </div>
        </div>
    </div>
</div>

<script>

    $(function () {

        $('#cardNumber').mask('0000-0000-0000-0000');

        $('.avatar img').click(function () {
            $('.avatar img').removeClass('active');
            $(this).addClass('active');
        })

    })

    $('#bankForm').ajaxForm({

        validation: true,
        url: '/Fund/AddBankAccount',
        jwt: false,
        blockui: true,
        mixin: true,

        success: function (response) {

            console.log(response)
            if (response.result) {

                localStorage.setItem('auth', response.data);
                window.location.href = '/Home';

            }
        },
        // error: function (xhr, status, error) {
        //     $('#loginResult').html(response.message).show();
        //     // $('#loginResult').html('خطایی رخ داده لطفا دوباره تلاش نمایید.').removeClass('hide');
        //     console.error('Form submission failed:', error);
        // }
    });

</script>