        }

        .wallet .menu-btn i {
            font-size: 1.5em;
            transform: rotate(45deg);
        }

    .wallet .footer {
        margin-top: 20px;
        text-align: center;
    }

    .wallet .transaction:hover {
        box-shadow: 0 1px 5px -1px rgba(0, 0, 0, 0.3), inset 0 0 0 1px rgba(0, 0, 0, 0.15);
    }
</style>



