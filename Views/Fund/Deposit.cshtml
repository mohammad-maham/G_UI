            border-radius: 50%;
            position: absolute;
            top: -60px;
            left: -100px;
            z-index: 2;
        }

        .wallet .header::after {
            content: "";
            height: 100px;
            width: 100px;
            background-color: #53b5a8;
            border-radius: 50%;
            position: absolute;
            right: -20px;
            bottom: -30px;
            z-index: 2;
        }

    .wallet .header-summary {
        display: flex;
        flex-direction: column;
        font-family: 'Montserrat', sans-serif;
        color: white;
        z-index: 3;
    }

    .wallet .summary-text {
        font-size: 1.2rem;
